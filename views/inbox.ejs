<%- include('./partials/header.ejs'); %>

    <div id="chat-container">
      <div id="search-container">
        <input type="text" placeholder="Search" />
      </div>
      <div id="conversation-list">
        <div class="conversation active">
          <img src="./images/user1.png" alt="Sakib" />
          <div class="title-text">Mohammad Sakib Mahmood</div>
          <di class="created-date"> June 20 </di>
          <div class="conversation-message">Ok then</div>
        </div>
        <div class="conversation">
          <img src="./images/user2.png" alt="Mitu" />
          <div class="title-text">Fahima Haque</div>
          <di class="created-date"> June 19 </di>
          <div class="conversation-message">We will meet tomorrow</div>
        </div>
      </div>
      <div id="new-message-container">
        <a href="#">+</a>
      </div>
      <div id="chat-title">
        <span>Chatting Conversation</span>
        <img src="./images/trash.png" alt="Delete Conversation" />
      </div>
      <div id="chat-message-list">
        <div class="message-row other-message">
          <div class="message-content">
            <img src="./images/user1.png" alt="Sakib" />
            <div class="message-text">Ok then</div>
            <div class="message-time">June 20</div>
          </div>
        </div>
        <div class="message-row you-message">
          <div class="message-content">
            <div class="message-text">We will meet tomorrow</div>
            <div class="message-time">June 20</div>
          </div>
        </div>
      </div>
      <div id="chat-form">
        <img src="./images/attachment.png" alt=Add Attachment"" />
        <input type="text" placeholder="Type a message" />
      </div>
    </div>

    <div class="modal-wrapper">
      <div class="modal">
        <a href="#" class="modal-close">+</a>
        <div class="modal-title">
          <h2>Create New Conversation</h2>
        </div>
        <div class="modal-body">
          <form>
            <input type="text" placeholder="Name" />
            <input type="text" placeholder="Username" />
            <input type="button" value="Submit" />
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
